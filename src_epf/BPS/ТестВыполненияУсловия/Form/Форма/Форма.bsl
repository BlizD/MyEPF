
&НаСервере
Процедура УсловиеВыполненоНаСервере()
	Отказ = Ложь;
	ДопПараметры = Новый Структура();
	ДопПараметры.Вставить("Условие",Объект.Условие);
	ДопПараметры.Вставить("ОбъектБД",Объект.ОбъектБД);
	УсловиеВыполнено = Справочники.бпсУсловия.УсловиеВыполнено(ДопПараметры,Отказ);
	Сообщить("УсловиеВыполнено = " + УсловиеВыполнено);
КонецПроцедуры

&НаКлиенте
Процедура УсловиеВыполнено(Команда)
	УсловиеВыполненоНаСервере();
КонецПроцедуры
